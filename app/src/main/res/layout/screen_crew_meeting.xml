<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_screen_offset"
        android:layout_marginTop="10dp"
        android:text="Команда" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerCrew"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/etEventDescription" />

    <EditText
        android:id="@+id/etMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_screen_offset"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/default_screen_offset"
        android:hint="Описание" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner" />


</LinearLayout>